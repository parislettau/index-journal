{
  "name": "johannschopplich/kirby-deploy-trigger",
  "description": "Kirby Panel plugin to trigger deployments on any platform",
  "type": "kirby-plugin",
  "version": "1.0.6",
  "keywords": [
    "deployment",
    "vercel",
    "kirby"
  ],
  "license": "MIT",
  "homepage": "https://github.com/johannschopplich/kirby-deploy-trigger#readme",
  "authors": [
    {
      "name": "Johann Schopplich",
      "email": "hello@johannschopplich.com",
      "homepage": "https://johannschopplich.com"
    }
  ],
  "require": {
    "getkirby/composer-installer": "^1"
  },
  "require-dev": {
    "getkirby/cms": "^4",
    "vlucas/phpdotenv": "^5"
  },
  "scripts": {
    "dev": [
      "Composer\\Config::disableProcessTimeout",
      "@php -S localhost:8000 -t playground/public vendor/getkirby/cms/router.php"
    ],
    "csfix": "@php tools/phpcs/vendor/bin/php-cs-fixer fix",
    "dist": "composer install --no-dev --optimize-autoloader"
  },
  "config": {
    "optimize-autoloader": true,
    "allow-plugins": {
      "getkirby/composer-installer": true
    }
  },
  "extra": {
    "kirby-cms-path": false
  }
}
